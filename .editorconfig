root = true

[**]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

[*.{go,mod}]
insert_final_newline = true
indent_style = tab
max_line_length = 80

[**.{yml,yaml,md}]
insert_final_newline = true
indent_style = space
indent_size = 2

[*.sql]
indent_style = space
indent_size = 2
max_line_length = 120
insert_final_newline = true
